{
    "name": "淘宝订单信息抓取 By Panli",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "淘宝订单信息抓取 喵 By Panli @Julian",
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },

    "browser_action": {
        "default_icon": "img/16.png",
        "default_title": "淘宝订单信息抓取工具",
        "default_popup": "pages/popup.html"
    },

    "background": {
        "persistent": true,
        "scripts": [          
            "js/all.js"
        ]
    },
    "options_page": "pages/option.html",

    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "cookies",
        "notifications",
        "alarms",
        "webNavigation",
        "\u003Call_urls\u003E"
    ],   

    "content_scripts": [
        {
            "matches": [
                "*://buyertrade.taobao.com/trade/detail/trade_item_detail.htm*",
                "*://tmtrade.yao.95095.com/detail/order_detail.htm*",
                "*://trade.tmall.com/detail/orderDetail.htm?*"         
            ],
            "js": [
               "libs/panli.js",
               "libs/lodash.js",
               "js/all.js",
               "js/api.js",
               "js/get.js",
               "js/save.js",
               "js/url.js",
               "js/tao.js",
               "js/db.js",
               "js/contentscript.js"
            ],
            "run_at": "document_end"
        }
    ]

}
